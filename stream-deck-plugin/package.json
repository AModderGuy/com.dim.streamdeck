{
  "private": true,
  "name": "dim-stream-deck-plugin",
  "version": "1.0.7",
  "author": "Francesco Saverio Cannizzaro (fcannizzaro)",
  "license": "GPL-3",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "scripts": {
    "start": "npx ts-node ./src/index.ts -debug com.dim.streamdeck",
    "build": "npm run build:ts && npm run build:bin",
    "build:ts": "npx tsc -outDir dist",
    "build:bin": "npx pkg package.json --compress GZip -o plugin/com.dim.streamdeck"
  },
  "dependencies": {
    "@stream-deck-for-node/sdk": "1.0.11",
    "comma-number": "^2.1.0",
    "openurl": "^1.1.1",
    "ws": "^8.4.0"
  },
  "pkg": {
    "targets": [
      "node16-windows-x64"
    ],
    "assets": [
      "./ssl/**/*",
      "./images/**/*"
    ]
  },
  "devDependencies": {
    "@types/comma-number": "^2.1.0",
    "@types/copy-paste": "^1.1.30",
    "@types/node": "^16.11.12",
    "@types/openurl": "^1.0.0",
    "@types/ws": "^8.2.2",
    "prettier": "^2.7.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}
